<?xml version="1.0"?>
<csp_whitelist xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Csp:etc/csp_whitelist.xsd">
    <policies>
        <policy id="script-src">
            <values>
                <value id="nelojs-library" type="host">https://js.nelo.co</value>
            </values>
        </policy>
        <policy id="connect-src">
            <values>
                <value id="promotional-messages-sandbox" type="host">https://sandbox.nelo.co</value>
                <value id="promotional-messages" type="host">https://api.nelo.co</value>
            </values>
        </policy>
    </policies>
</csp_whitelist>